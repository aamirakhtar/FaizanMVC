@{
    Layout = null;

    List<Department> departments = ViewBag.departments;
    List<SelectListItem> list = departments.Select(d => new SelectListItem() { Value = d.Id.ToString(), Text = d.Name }).ToList();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Employee</title>
</head>
<body>
    <form method="post">
        <p>@ViewBag.msg</p>
        <table>
            <tr>
                <td>Name</td>
                <td>@Html.TextBox("name")</td>
            </tr>
            <tr>
                <td>Age</td>
                <td>@Html.TextBox("age")</td>
            </tr>
            <tr>
                <td>Department</td>
                <td>@Html.DropDownList("departmentId", list)</td>
            </tr>
            <tr>
                <td>Date Of Birth</td>
                <td>@Html.TextBox("dob")</td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>
        <a href="/Employee">View All</a>
    </form>
</body>
</html>
