@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    Employee employee = ViewBag.employee;


    List<Department> departments = ViewBag.departments;
    List<SelectListItem> list = new List<SelectListItem>();

    if (employee != null)
    {
        foreach (Department dept in departments)
        {
            bool isSelected = employee.DepartmentId == dept.Id;

            list.Add(new SelectListItem() { Value = dept.Id.ToString(), Text = dept.Name, Selected = isSelected });
        }
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Employee</title>
</head>
<body>
    <form method="post">
        <p>@ViewBag.msg</p>
        <table>
            <tr>
                <td>Name</td>
                <td>@Html.TextBox("name", employee.Name)</td>
            </tr>
            <tr>
                <td>Age</td>
                <td>@Html.TextBox("age", employee.Age)</td>
            </tr>
            <tr>
                <td>Department</td>
                <td>@Html.DropDownList("departmentId", list)</td>
            </tr>
            <tr>
                <td>Date Of Birth</td>
                <td>@Html.TextBox("dob", employee.DateOfBirth)</td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>
        <a href="/Employee">View All</a>
    </form>
</body>
</html>
