@model Company.Models.EmployeeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    //List<Department> departments = ViewBag.departments;
    List<SelectListItem> list = Model.departments.Select(d => new SelectListItem() { Value = d.Id.ToString(), Text = d.Name }).ToList();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Employee</title>
</head>
<body>
    <form method="post">
        <p>@ViewBag.msg</p>
        <table>
            <tr>
                <td>Name</td>
                <td>
                    @Html.TextBoxFor(m => m.employee.Name)
                </td>
            </tr>
            <tr>
                <td>Age</td>
                <td>@Html.TextBoxFor(m => m.employee.Age)</td>
            </tr>
            <tr>
                <td>Department</td>
                <td>@Html.DropDownListFor(m => m.employee.DepartmentId, list)</td>
            </tr>
            <tr>
                <td>Date Of Birth</td>
                <td>@Html.TextBoxFor(m => m.employee.DateOfBirth)</td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>
        <a href="/Employee">View All</a>
    </form>
</body>
</html>
